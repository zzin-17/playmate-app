# 프로덕션 환경 설정
NODE_ENV=production
PORT=3000

# 데이터베이스 설정 (프로덕션용)
DATABASE_URL=mongodb://mongodb-cluster:27017/playmate_prod_db

# JWT 설정 (프로덕션용 - 강력한 시크릿)
JWT_SECRET=CHANGE_THIS_TO_SUPER_STRONG_SECRET_IN_PRODUCTION_MINIMUM_32_CHARS
JWT_EXPIRES_IN=24h

# 파일 업로드 설정
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/app/uploads

# CORS 설정 (프로덕션용 - 특정 도메인만 허용)
CORS_ORIGIN=https://playmate.com,https://www.playmate.com

# 소켓 설정
SOCKET_CORS_ORIGIN=https://playmate.com

# 로깅 설정 (프로덕션용 - 최소 로그)
LOG_LEVEL=error
ENABLE_API_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=false

# 대량 데이터 처리 설정 (십만 건 이상 대응)
MAX_POSTS_PER_PAGE=20
MAX_MATCHINGS_PER_PAGE=50
CACHE_TTL=3600
MEMORY_LIMIT=2GB

# 보안 설정
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# 모니터링 설정
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30000
