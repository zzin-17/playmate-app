# 개발 환경 설정
NODE_ENV=development
PORT=3000

# 데이터베이스 설정 (개발용)
DATABASE_URL=mongodb://localhost:27017/playmate_dev_db

# JWT 설정 (개발용)
JWT_SECRET=dev-jwt-secret-key-for-development-only
JWT_EXPIRES_IN=7d

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/dev

# CORS 설정 (개발용 - 모든 오리진 허용)
CORS_ORIGIN=*

# 소켓 설정
SOCKET_CORS_ORIGIN=*

# 로깅 설정 (개발용 - 상세 로그)
LOG_LEVEL=debug
ENABLE_API_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# 대량 데이터 처리 설정 (십만 건 대응)
MAX_POSTS_PER_PAGE=50
MAX_MATCHINGS_PER_PAGE=100
CACHE_TTL=300
MEMORY_LIMIT=512MB
