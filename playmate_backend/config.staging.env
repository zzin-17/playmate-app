# 스테이징 환경 설정
NODE_ENV=staging
PORT=3000

# 데이터베이스 설정 (스테이징용)
DATABASE_URL=mongodb://staging-mongodb:27017/playmate_staging_db

# JWT 설정 (스테이징용)
JWT_SECRET=staging-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=3d

# 파일 업로드 설정
MAX_FILE_SIZE=8388608
UPLOAD_PATH=./uploads/staging

# CORS 설정 (스테이징용)
CORS_ORIGIN=https://staging.playmate.com

# 소켓 설정
SOCKET_CORS_ORIGIN=https://staging.playmate.com

# 로깅 설정 (스테이징용 - 상세 로그)
LOG_LEVEL=info
ENABLE_API_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# 대량 데이터 처리 설정 (십만 건 테스트)
MAX_POSTS_PER_PAGE=30
MAX_MATCHINGS_PER_PAGE=75
CACHE_TTL=1800
MEMORY_LIMIT=1GB

# 테스트 설정
ENABLE_TEST_DATA=true
ENABLE_MOCK_SERVICES=false
