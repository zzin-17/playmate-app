{
  "name": "playmate-backend",
  "version": "1.0.0",
  "description": "PlayMate 백엔드 서버",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development PORT=3000 node src/server.js",
    "dev:stable": "node start-stable.js",
    "staging": "NODE_ENV=staging node src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "dev:watch": "nodemon --env-file=config.development.env src/server.js",
    "staging:watch": "nodemon --env-file=config.staging.env src/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf uploads/* logs/*",
    "health": "curl http://localhost:3000/api/health",
    "kill": "pkill -f 'node src/server.js' || pkill -f 'node start-stable.js' || true",
    "restart": "npm run kill && sleep 2 && npm run dev:stable",
    "status": "ps aux | grep -E 'node (src/server.js|start-stable.js)' | grep -v grep || echo 'No server running'",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop playmate-backend",
    "pm2:restart": "pm2 restart playmate-backend",
    "pm2:delete": "pm2 delete playmate-backend",
    "pm2:logs": "pm2 logs playmate-backend --lines 50",
    "pm2:status": "pm2 status",
    "pm2:monitor": "pm2 monit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "pm2": "^6.0.11",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "tennis",
    "matching",
    "sports",
    "community"
  ],
  "author": "PlayMate Team",
  "license": "MIT"
}
